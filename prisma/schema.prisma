
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//user schema 

model User {
    id String @id @default(uuid())
    email String @unique 
    fullName String
    password  String
    imageUrl String?
    role Role  @default(USER)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    documents Document[]
}

enum Role {
    USER
    ADMIN
}


model Document {
  

  id        String   @id @default(uuid())
  filename  String
  filepath  String
  extracted Json?
  isDeleted Boolean @default(false)
  status    DocumentStatus   @default(PENDING)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  

}


enum DocumentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}


